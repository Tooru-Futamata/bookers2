 <div id="notice"></div>
 <div class='container'>
  <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

  <h2 class="mt-3">User info</h2>
  <%= form_with model:@user, local:true do |f| %>
  <% if @user.errors.any? %>
  <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
  <table><% @user.errors.full_messages.each do |message| %></table>
  <%= message %>
  <% end %>
  <% end %>

  <div class="form-group">
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
  </div>

  <div class="form-group">
  <label for="inputImage">Image</label><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>

  <div class="form-group">
  <br><label for="inputIntroduction">Introduction</label>
  <br><%= f.text_area :introduction %></br>
  </div>


  <div class="form-group">
  <br><%= f.submit "Update User", class: "btn btn-secondary" %></br>
  </div>
  <% end %>

  </div>
  </div>
  </div>